package com.bcj.corejava.Operators.lab2;

 import java.util.Scanner;


public class moonGravity {

	public void measuringWeight(float weit) {
		
		float mwei = weit * 0.17f;
		System.out.println("weight on moon is :" + mwei);
	}

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the Wieght on earth : ");
		float ewei = sc.nextFloat();
		moonGravity mg = new moonGravity();
		mg.measuringWeight(ewei);

	}

}
